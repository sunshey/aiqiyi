<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_f14343"
        android:paddingTop="@dimen/t10dp"
        app:navigationIcon="@mipmap/back">

        <TextView
            android:id="@+id/tv_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:text="修改昵称"
            android:textColor="@color/white" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/t50dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="@dimen/t20dp"
            android:layout_height="@dimen/t20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/t10dp"
            android:src="@mipmap/ic_login_calen"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/t5dp"
            android:layout_toLeftOf="@id/iv_cancel"
            android:background="@null"
            android:ellipsize="end"
            android:hint="请输入昵称"
            android:paddingLeft="@dimen/t10dp"
            android:paddingRight="@dimen/t10dp"
            android:singleLine="true"
            android:textColor="@color/black_333"
            android:textColorHint="@color/black_333"
            android:textSize="@dimen/t14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t50dp"
        android:layout_marginTop="@dimen/t10dp">

        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_weight="0"
            android:background="@drawable/photo_bg"
            android:gravity="center"
            android:paddingLeft="@dimen/t10dp"
            android:paddingRight="@dimen/t10dp"
            android:text="获取验证码"
            android:textColor="@color/red_f14343"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/t8dp"
            android:layout_toLeftOf="@id/tv_get_code"
            android:background="@color/white"
            android:hint="请输入手机号码"
            android:paddingLeft="@dimen/t10dp"
            android:textColor="@color/black_333"
            android:textColorHint="@color/black_333"
            android:textSize="@dimen/t14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/t40dp"
        android:layout_margin="@dimen/t20dp"
        android:background="@drawable/common_cirlce_red_bg"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>