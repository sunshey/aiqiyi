<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_f14343"
        android:paddingTop="@dimen/t10dp"
        app:navigationIcon="@mipmap/back">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/setting"
            android:textColor="@color/white"
            android:textSize="@dimen/t14sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <aiqiyi.yc.com.my.ui.widget.BaseSettingView
                android:id="@+id/baseSettingView_avtor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:show_extra="true"
                app:title="修改图像" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/t1dp"
                android:background="@color/gray_f5f5f5" />

            <aiqiyi.yc.com.my.ui.widget.BaseSettingView
                android:id="@+id/baseSettingView_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:show_extra="true"
                app:title="手机号" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/t10dp"
                android:background="@color/gray_f5f5f5" />

            <aiqiyi.yc.com.my.ui.widget.BaseSettingView
                android:id="@+id/baseSettingView_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:show_extra="true"
                app:title="清除缓存" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/t1dp"
                android:background="@color/gray_f5f5f5" />

            <aiqiyi.yc.com.my.ui.widget.BaseSettingView
                android:id="@+id/baseSettingView_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:show_extra="true"
                app:title="版本更新" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/t50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_ripper_bg"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/red_f14343"
            android:textStyle="bold" />

    </RelativeLayout>
</LinearLayout>